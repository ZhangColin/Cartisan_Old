<body class=" login">
    <div class="menu-toggler sidebar-toggler"></div>
    <!-- END SIDEBAR TOGGLER BUTTON -->
    <!-- BEGIN LOGO -->
    <div class="logo">
        <h1><a href="" class="font-green-sharp bold uppercase" style="text-decoration: none">Cartisan</a></h1>
        @*    <a href="index.html">*@
        @*        <img src="../assets/pages/img/logo-big.png" alt=""/>*@
        @*    </a>*@
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form class="login-form" action="@Url.Action("Register", "Account")" method="post">
            @Html.AntiForgeryToken()
            <h3 class="form-title font-green"> 注册 </h3>
            <div class="alert alert-danger @(ViewData.ModelState.IsValid?"display-hide":"") ">
                <button class="close" data-close="alert"></button>
                <span> @string.Join(" ", Html.ViewData.ModelState.SelectMany(pair => pair.Value.Errors).Select(err => err.ErrorMessage).ToArray()) </span>
            </div>
            <p class="hint"> 输入您的账户信息: </p>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">手机号/会员名/邮箱</label>
                <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="手机号/会员名/邮箱" name="userName" />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">密码</label>
                <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="密码" name="password" id="password" />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">确认密码</label>
                <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="确认密码" name="confirmPassword" />
            </div>
            <div class="form-group margin-top-20 margin-bottom-20">
                <label class="check">
                    <input type="checkbox" name="tnc"/> 我同意
                    <a href="javascript:;"> 服务条款 </a> &
                    <a href="javascript:;"> 隐私政策 </a>
                </label>
                <div id="register_tnc_error"> </div>
            </div>
            <div class="form-actions">
@*                <button type="button" id="register-back-btn" class="btn btn-default">Back</button>*@
                <button type="submit" id="register-submit-btn" class="btn btn-success uppercase">注册</button>
            </div>
            <div class="create-account">
                <p>
                    <a href="@Url.Action("Login", "Account")" class="uppercase">登录</a>
                </p>
            </div>
        </form>
        <!-- END LOGIN FORM -->
    </div>
