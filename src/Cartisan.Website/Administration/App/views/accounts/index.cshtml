@inherits System.Web.Mvc.WebViewPage
<!-- BEGIN PAGE BREADCRUMB -->
<ul class="page-breadcrumb breadcrumb hide">
    <li>
        <a href="#">Home</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="#">jQuery Plugins</a>
        <i class="fa fa-circle"></i>
    </li>
    <li class="active"> Advanced Datatables </li>
</ul>
<!-- END PAGE BREADCRUMB -->
<!-- BEGIN MAIN CONTENT -->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="col-md-6 col-sm-6">

                        <div>
                            <label>Search:<input type="search" class="form-control input-sm input-small input-inline" style="margin-left: 0.5em" placeholder="" aria-controls="sample_1"></label>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="btn-group pull-right">
                            <button id="sample_editable_1_new" class="btn sbold green">
                                新建
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>

                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-checkable order-column dataTable margin-bottom-5" >
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" class="group-checkable" data-set=".checkboxes" />
                            </th>
                            <th class="sorting_asc"> Username </th>
                            <th class="sorting_desc"> Email </th>
                            <th class="sorting"> Points </th>
                            <th> Joined </th>
                            <th> Status </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="odd gradeX" ng-repeat="account in accounts">
                            <td>
                                <input type="checkbox" class="checkboxes" value="1" />
                            </td>
                            <td> {{account.userName}} </td>
                            <td>
                                <a href="mailto:shuxer@gmail.com"> shuxer@gmail.com </a>
                            </td>
                            <td> 120 </td>
                            <td class="center"> 12 Jan 2012 </td>
                            <td>
                                <span class="label label-sm label-success"> Approved </span>
                            </td>
                        </tr>
                        <tr class="even gradeX hide">
                            <td>
                                <input type="checkbox" class="checkboxes" value="1" />
                            </td>
                            <td> looper </td>
                            <td>
                                <a href="mailto:looper90@gmail.com"> looper90@gmail.com </a>
                            </td>
                            <td> 120 </td>
                            <td class="center"> 12.12.2011 </td>
                            <td>
                                <span class="label label-sm label-warning"> Suspended </span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            <div class="row">
                <div class="col-md-5 col-sm-5">
                    <div class="margin-top-10" role="status" aria-live="polite"><label>Show <select name="sample_1_length" aria-controls="sample_1" class="form-control input-sm input-xsmall input-inline"><option value="5">5</option><option value="15">15</option><option value="20">20</option><option value="-1">All</option></select></label> {{bigCurrentPage}} / {{numPages}}</div>
                </div>
                <div class="col-md-7 col-sm-7">
                    <div class="text-right">
                        <uib-pagination
                            total-items="total"
                            ng-model="pageIndex"
                            num-pages="numPages"
                            items-per-page="pageSize"
                            ng-change="pageChanged()"
                            class="pagination-sm"
                            boundary-links="true"
                            direction-links="true"
                            rotate="false"
                            previous-text="上一页"
                            next-text="下一页"
                            first-text="第一页"
                            last-text="最后一页"></uib-pagination>
                    </div>
                </div>
            </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
<!-- END MAIN CONTENT -->
<!-- BEGIN MAIN JS -->
