@inherits System.Web.Mvc.WebViewPage
<div class="modal-header">
    <h3 class="modal-title">创建用户</h3>
</div>
<div class="modal-body">
    <form class="form-horizontal">
        <fieldset>
            <div class="form-group">
                <label for="questions.createDialog.title" class="col-lg-2 control-label">标题:</label>
                <div class="col-lg-10">
                    <input ng-model="account.title" id="questions.createDialog.title" type="text" class="form-control" name="title" placeholder="输入标题">
                </div>
            </div>
            <div class="form-group">
                <label for="questions.createDialog.content" class="col-lg-2 control-label">内容:</label>
                <div class="col-lg-10">
                    <textarea ng-model="account.content" id="questions.createDialog.content" class="form-control" rows="5" name="content" placeholder="描述你的问题……"></textarea>
                    <span class="help-block">提问前请先搜索你的问题。您可以使用代码或图片更清晰地描述问题。</span>
                </div>
            </div>
        </fieldset>
    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-warning" ng-click="cancel()">取消</button>
    <button class="btn btn-primary" ng-click="save()">提交</button>
</div>
