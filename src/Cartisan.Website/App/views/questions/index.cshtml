@inherits System.Web.Mvc.WebViewPage
<!-- BEGIN PAGE BREADCRUMB -->
<ul class="page-breadcrumb breadcrumb hide">
    <li>
        <a href="#">Home</a><i class="fa fa-circle"></i>
    </li>
    <li class="active">
        Dashboard
    </li>
</ul>
<!-- END PAGE BREADCRUMB -->
<!-- BEGIN MAIN CONTENT -->
<div ng-controller="questions.index as vm" class="margin-top-10">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <!-- BEGIN PORTLET-->
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="actions">
                        <button class="btn btn-square btn-sm green"> 提问 </button>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row list-separated question-stat"  ng-repeat="question in vm.questions">
                        <div class="col-md-1 col-sm-2 col-xs-6">
                            <div class="question-stat-title">
                                {{question.VoteCount}}
                            </div>
                            <div class="question-stat-text">
                                投票
                            </div>
                        </div>
                        <div class="col-md-1 col-sm-2 col-xs-6">
                            <div class="question-stat-title">
                                {{question.AnswerCount}}
                            </div>
                            <div class="question-stat-text">
                                回复
                            </div>
                        </div>
                        <div class="col-md-1 col-sm-2 col-xs-6">
                            <div class="question-stat-title">
                                {{question.ViewCount}}
                            </div>
                            <div class="question-stat-text">
                                浏览
                            </div>
                        </div>
                        <div class="col-md-9 col-sm-6 col-xs-6">
                            <div class="item">
                                <div class="item-head">
                                    <div class="item-details">
                                        <a ng-href="#/questions/{{question.Id}}" class="item-name primary-link">{{question.Title}}</a>
                                        <span class="item-label"></span>
                                    </div>
                                </div>
                                <div class="item-body"> 分钟前 </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PORTLET-->
        </div>
    </div>
</div>
<!-- END MAIN CONTENT -->