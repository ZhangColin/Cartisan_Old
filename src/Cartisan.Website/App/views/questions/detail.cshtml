@inherits System.Web.Mvc.WebViewPage
    
<div class="question-page question-content-2" ng-controller="questions.detail">
    <div class="row">
        <div class="col-lg-12">
            <div class="question-single-content bordered question-container">
                <div class="question-single-head">
                    <h1 class="question-single-head-title">{{question.title}}</h1>
                    <div class="question-single-head-date">
                        <i class="icon-calendar font-blue"></i>
                        <a href="javascript:;">{{question.created | fromNow}}</a>
                    </div>
                </div>
                <div class="question-single-desc">
                    {{question.content}}
                </div>
                <div class="question-single-foot">
                    <ul class="question-post-tags">
                        <li class="uppercase">
                            <a href="javascript:;">{{question.voteCount}} 票</a>
                        </li>
                        <li class="uppercase">
                            <a href="javascript:;">{{question.answerCount}} 回答</a>
                        </li>
                        <li class="uppercase">
                            <a href="javascript:;">{{question.viewCount}} 阅读</a>
                        </li>
                    </ul>
                </div>
                <div class="question-comments">
                    <h3 class="sbold question-comments-title">回复</h3>
                    <div class="c-comment-list">
                        <div class="media" ng-repeat="answer in question.answers">
                            <div class="media-body">
                                <h4 class="media-heading">
                                    <a href="#">{{answer.answerer}}</a> 
                                    <span class="c-date">{{answer.created | fromNow}}</span>
                                </h4> {{answer.content}}
                            </div>
                        </div>
                    </div>
                    <h3 class="sbold question-comments-title">回答</h3>
                        <div class="form-group">
                            <textarea rows="8" name="content" ng-model="answerContent" placeholder="填写答案内容" class="form-control c-square"></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" ng-disabled="!answerContent" ng-click="submitAnswer()" class="btn blue uppercase btn-md sbold btn-block"><i class="fa fa-check"></i>提交</button>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>